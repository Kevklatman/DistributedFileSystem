# Storage Environment ('local', 'aws', 'azure', or 'gcp')
STORAGE_ENV=aws

# AWS Credentials (only needed if STORAGE_ENV=aws)
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# Azure Credentials (only needed if STORAGE_ENV=azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string

# Google Cloud Credentials (only needed if STORAGE_ENV=gcp)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# API Configuration
API_HOST=localhost
API_PORT=5555

# Development Settings
DEBUG=True
FLASK_ENV=development
