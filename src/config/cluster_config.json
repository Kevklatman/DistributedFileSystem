{
    "cluster": {
        "name": "production-dfs",
        "zookeeper_connection": "zk1:2181,zk2:2181,zk3:2181",
        "replication_factor": 3,
        "quorum_size": 2,
        "auto_failover": true,
        "consistency_level": "strong",
        "heartbeat_interval_ms": 5000
    },
    "storage": {
        "chunk_size_mb": 64,
        "compression_enabled": true,
        "encryption_enabled": true,
        "cache_size_gb": 32
    },
    "network": {
        "max_connections": 1000,
        "timeout_ms": 30000,
        "buffer_size_kb": 8192,
        "tls_enabled": true
    }
}