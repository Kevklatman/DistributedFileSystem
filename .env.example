# Storage Environment ('local' or 'aws')
STORAGE_ENV=local

# AWS Credentials (only needed if STORAGE_ENV=aws)
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AWS_REGION=us-east-2
AWS_ENDPOINT_URL=  # Optional: for testing with localstack or custom endpoints

# Local Storage Configuration
LOCAL_STORAGE_DIR=./storage  # Directory for local storage backend

# API Configuration
API_HOST=0.0.0.0
API_PORT=5555

# Development Settings
DEBUG=True
FLASK_ENV=development
