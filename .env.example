# Storage Environment ('local', 'aws', 'gcp', 'azure', or 'hybrid')
STORAGE_ENV=hybrid

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-2

# Google Cloud Configuration
GCP_PROJECT_ID=your_project_id
GCP_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GCP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# Azure Configuration
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONNECTION_STRING=your_connection_string

# Hybrid Cloud Configuration
# Priority: 1 (highest) to 3 (lowest)
AWS_PRIORITY=1
AZURE_PRIORITY=2
GCP_PRIORITY=3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Development Settings
DEBUG=True
FLASK_ENV=development

# Metrics Configuration
ENABLE_METRICS=true
METRICS_HOST=0.0.0.0
METRICS_PORT=9100

# Replication Configuration
ENABLE_REPLICATION=true
REPLICATION_FACTOR=2
